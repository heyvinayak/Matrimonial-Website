    <!--PREFERENCE FORM START-->

    <div class="container-fluid mt-5 contact-style" id="preferenceid">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
           <h1 class="text-center main-heading" style="color: #5222d0;">Select Your Match!</h1>
           <p class="text-center sub-heading" style="font-family :Verdana, Geneva, Tahoma, sans-serif">choose your preferences according to you</p>

           <div class="row">
              <div class="col-md-6 col-12 mx-auto">
                <form action="/preference" method="POST">
                   <div class="form-group">
                    <label for="exampleInputPassword1">I'm looking for a</label>
                    <input style="color: black; font-size: 21px; font-family:Arial, Helvetica, sans-serif" type="text" class="form-control input1" id="exampleInputPassword1" placeholder="Man/Woman" name="gender">
                   </div>

                   <div class="form-group">
                    <label for="exampleInputEmail1">Religion</label>
                    <input style="color: black; font-size: 21px; font-family:Arial, Helvetica, sans-serif" type="text" class="form-control input1" id="exampleInputEmail1" placeholder="Hindu/Muslim/Christian/Sikh/Parsi/Jewish" name="religion">
                   </div>

                   <div class="form-group">
                    <label for="exampleInputPassword1">Mother Tongue</label>
                    <input style="color: black; font-size: 21px; font-family:Arial, Helvetica, sans-serif" type="text" class="form-control input1" id="exampleInputPassword1" placeholder="Hindi/Punjabi/Marathi/Bengali/English/Urdu" name="mothertongue">
                   </div>

                   <div class="form-group">
                    <label for="exampleInputPassword1">City</label>
                    <input style="color: black; font-size: 21px; font-family:Arial, Helvetica, sans-serif" type="text" class="form-control input1" id="exampleInputPassword1" placeholder="Delhi/Mumbai/Chandigarh/Kolkata/Chennai" name="city">
                   </div>

                   <div class="form-group">
                    <label for="exampleInputPassword1">Occupation</label>
                    <input style="color: black; font-size: 21px; font-family:Arial, Helvetica, sans-serif" type="text" class="form-control input1" id="exampleInputPassword1" placeholder="IT/Businessman/Lawyer/Teacher/NGO" name="occupation">
                   </div>
                   <br>
                   <br>
                   <button style="font-size: 20px; font-family :Verdana, Geneva, Tahoma, sans-serif" class="btn btn-danger" type="submit"><b>SUBMIT</b></button>
                </form>
              </div>
           </div>
        </div>
